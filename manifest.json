{
  "name": "TornStocks",
  "version": "1.0.0",
  "description": "Get The best from TornStocks",
  "manifest_version": 3,
  "author": "Legaci [2100546]",
  "background": {
    "service_worker": "js/background.js"
  },
  "action":{
    "default_popup": "popup/popup.html",
    "default_icon": "images/stocks.png",
    "default_title": "TornStocks",
    "matches": ["*://*.torn.com/*"]
  },
  "host_permissions": [ "*://*.torn.com/*" ],
  "permissions": ["tabs", "activeTab", "scripting"]
}